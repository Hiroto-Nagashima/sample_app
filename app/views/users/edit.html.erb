<% provide(:title, 'Edit user') %>
<!--yield(:button_text)に代入される-->
<% provide(:button_text, 'Save changes') %>
<h1>Update your profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <!--target="_blank"を使うとリンク先を新しいタブ（またはウィンドウ）で開くようになる-->
      <!--リンク先のサイトがHTMLドキュメントのwindowオブジェクトを扱えてしまう.悪意のあるコンテンツを導入させられてしまう可能性を排除-->
      <a href="https://gravatar.com/emails" target="_blank" rel = "noopener">Change</a>
    </div>
  </div>
</div>