<% if @feed_items.any? %>
  <ol class="microposts">
    <!--@feed_itemsの各要素がMicropostクラスを持っていたため、RailsはMicropostのパーシャルを呼び出すことができる-->
    <!--つまりapp/views/microposts/_micropost.html.erbを探してくれる-->
    <%= render @feed_items %>
  </ol>
  <%= will_paginate @feed_items,
                    params: { controller: :static_pages, action: :home } %>
<% end %>